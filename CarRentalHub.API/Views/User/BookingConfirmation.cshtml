@model CarRentalHub.API.Models.Booking

@{
    ViewData["Title"] = "Booking Confirmation";
}

<h2>Booking Confirmed</h2>

<p>Car: @Model.Car.Brand @Model.Car.Model</p>
<p>From: @Model.BookingDate.ToShortDateString()</p>
<p>To: @Model.EndDate.ToShortDateString()</p>
<p><b>Driver Name:</b> @Model.Car?.DriverName</p>
<p><b>Driver Phone:</b> @Model.Car?.DriverPhone</p>

<a asp-controller="User" asp-action="Dashboard" class="btn btn-primary">Back to Cars</a>
