@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">

    <div class="text-center p-5 bg-gradient bg-primary text-white rounded-3 shadow">
        <h1 class="display-4 fw-bold">Find Your Perfect Ride</h1>
        <p class="lead">Rent cars hassle-free from our modern rental fleet.</p>
        <a class="btn btn-light btn-lg mt-3">Book a Car Now</a>
    </div>


    <div class="row text-center mt-5">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-car-front-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Wide Car Selection</h5>
                    <p class="card-text">Choose from SUVs, Sedans, Hatchbacks, and more.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-currency-rupee display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Affordable Pricing</h5>
                    <p class="card-text">Transparent and competitive rental charges.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <i class="bi bi-calendar-check-fill display-4 text-primary mb-3"></i>
                    <h5 class="card-title">Easy Booking</h5>
                    <p class="card-text">Quick and secure online reservations in minutes.</p>
                </div>
            </div>
        </div>
    </div>


    <div class="row my-5 align-items-center">
        <div class="col-md-6">
            <img src="~/images/cars/innova.jpg" class="img-fluid rounded shadow" alt="Car Rental">
        </div>
        <div class="col-md-6">
            <h2 class="fw-bold">Why Choose CarRentalHub?</h2>
            <p>We provide quality cars at budget-friendly rates with round-the-clock customer support. Whether you're on a business trip or vacation, we've got you covered.</p>
            <a href="/Home/About" class="btn btn-outline-primary mt-3">Learn More</a>
        </div>
    </div>
</div>
