@model CarRentalHub.API.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Model</dt>
        <dd class="col-sm-10">@Model.Model</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Color</dd>

        <dt class="col-sm-2">Price Per Day</dt>
        <dd class="col-sm-10">@Model.PricePerDay</dd>

        <dt class="col-sm-2">Available</dt>
        <dd class="col-sm-10">@Model.IsAvailable</dd>

        @if (Model.ImagePath != null)
        {
            <div class="mb-2">
                <img src="@Url.Content(Model.ImagePath)" alt="Car Image" style="max-width:300px;max-height:200px;" />
            </div>
        }
        <dt class="col-sm-2">Driver Name</dt>
        <dd class="col-sm-10">@Model.DriverName</dd>
        <dt class="col-sm-2">Driver Phone</dt>
        <dd class="col-sm-10">@Model.DriverPhone</dd>
    </dl>
</div>

<a asp-action="Dashboard" class="btn btn-secondary">Back</a>
