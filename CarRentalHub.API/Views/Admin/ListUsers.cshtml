@model IEnumerable<CarRentalHub.API.Models.ApplicationUser>
@{
    ViewData["Title"] = "Registered Users";
}
<h2>Registered Users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>
                    <a asp-action="UserBookings" asp-route-id="@user.Id" class="btn btn-info btn-sm">View Bookings</a>
                </td>
            </tr>
        }
    </tbody>
</table> 