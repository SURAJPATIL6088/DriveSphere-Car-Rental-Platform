@model CarRentalHub.API.Models.Car

@{
    ViewData["Title"] = "Delete Car";
}

<h2>@ViewData["Title"]</h2>

<h4>Are you sure you want to delete this car?</h4>
<div>
    <p><strong>Brand:</strong> @Model.Brand</p>
    <p><strong>Model:</strong> @Model.Model</p>
    <p><strong>Color:</strong> @Model.Color</p>
    <p><strong>Price Per Day:</strong> @Model.PricePerDay</p>
    <p><strong>Available:</strong> @Model.IsAvailable</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
</form>
